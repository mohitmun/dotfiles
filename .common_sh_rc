alias brew="brew -v"

# ====================
# Get new tip from the art of command line repo everyday. can be use for different stuff also
if [ ! -f ~/.taocl.md ]; then 
  echo "Getting TAOCL from github"
  curl -s https://raw.githubusercontent.com/jlevy/the-art-of-command-line/master/README.md > taocl.md 
fi
sed '/cowsay[.]png/d' taocl.md | pandoc -f markdown -t html | xmlstarlet fo --html --dropdtd | xmlstarlet sel -t -v "(html/body/ul/li[count(p)>0])[$RANDOM mod last()+1]" | xmlstarlet unesc | fmt -80 | iconv -t US | cowsay
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
export HOMEBREW_NO_AUTO_UPDATE=1

